{
    "name": "{{ vendor|lower }}/{{ name|lower }}",
    "description": "",
    "keywords": ["",""],
    "homepage": "http://github.com/{{ vendor }}/{{ name }}",
    "type": "library",
{% if license %}    "license": "{{ license }}",{% endif %}
{% if authors %}    "authors": [
        {
        {{ authors }}
        }
    ],{% endif %}
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "fabpot/php-cs-fixer": "0.4.0",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {"{{ name }}": "src/"}
    }
}
